<h2>ユーザー新規作成</h2>


<%= render "shared/error", obj: @main %>　


<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>


<%= form_with model: @main do |f| %>
 <table>
  <tr>
    <th><%= f.label :title ,"タイトル"%></th>
    <td><%= f.text_field :title, class:"sizechenge" %></td>
  </tr>
  
  <tr>
    <th><%= f.label :start_at ,"開始日"%></th>
    <td><%= f.date_field :start_at, class:"formchange" %></td>
  </tr>

  <tr>
    <th><%= f.label :end_at ,"終了日"%></th>
    <td><%= f.date_field :end_at, class:"formchange" %></td>
  </tr>

   
  <tr>
    <th><%= f.label :checkbox ,"終日" %></th>
    <td><%= f.check_box :checkbox, {}, true, false %>
    <br>終日の場合はチェックを入れます</td>
  </tr>
  
    
  <tr>
    <th><%= f.label :memo ,"スケジュールメモ"%></th>
    <td><%= f.text_area :memo, class:"sizechenges" %></td>
  </tr>
 </table>


 <div>
    <ul>
     <li><%= f.submit "スケジュールを新規登録する"%></li>
     <li><%= link_to "スケジュール一覧に戻る",:mains %></li>
    </ul>
 </div>
<% end %>


<footer>
    <h1>現在の日時：<%= Date.today.strftime("%Y年%m月%d日") %></h1>
</footer>