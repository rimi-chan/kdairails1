<h2>スケジュール一覧</h2>


<% if flash[:alert] %>
 <p id="alert"><%= alert %></p>
<% end %>



<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>


<table>
  <thead>
    <tr>
      <th>id</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>スケジュール更新日時</th>
      <th>確認</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>

  <tbody>
   <% @mains.each do |main| %>
    <tr>
      <td><%= main.id %></td>
      <td><%= main.title %></td>
      <td><%= main.start_at.to_s(:date_jp) %></td>
      <td><%= main.end_at.to_s(:date_jp) %></td>
      <td>
        <% if main.checkbox == true %>
          ◯
        <% else main.checkbox == false %>
　　      
        <% end %>
      </td>
      <td><%= main.updated_at.to_s(:datetime) %></td>
      <td><%= link_to "確認", main %></td>
      <td><%= link_to"編集",[:edit,main] %></td>
      <td><%= link_to "削除", main, method: :delete, data: { confirm: "削除しますか?" } %></td>
    </tr>
   <% end %>
  </tbody>
</table>
<p><%= link_to"スケジュール新規登録", :new_main  %></p>

<footer>
      <h1>現在の日時：<%= Date.today.strftime("%Y年%m月%d日") %>  スケジュール合計：<%= @mains_count %></h1>
</footer>